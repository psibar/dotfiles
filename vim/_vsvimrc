


"Block bad habits
inoremap <UP> <NOP>
inoremap <DOWN> <NOP>
inoremap <RIGHT> <NOP>
inoremap <LEFT> <NOP>

"German Keyboard optimization
inoremap <C-;> <Esc>
noremap ö ;
noremap ä '
noremap ü [
noremap + ]
noremap Ö {
noremap Ä }
nnoremap - /

set number
set ignorecase
set smartcase
set incsearch
set backspace=2

set noet ci pi sts=0 sw=4 ts=4

set hlsearch
" CTRL-X and SHIFT-Del are Cut
vnoremap <C-X> "+x
vnoremap <S-Del> "+x

" CTRL-C and CTRL-Insert are Copy
vnoremap <C-C> "+y
vnoremap <C-Insert> "+y

" CTRL-V and SHIFT-Insert are Paste
"map <C-V>		"+gP
map <C-L>	:nohl<cr>
map <S-Insert>		"+gP
"imap <C-V>		<Esc>"+gpa

"cmap <C-V>		<C-R>+
cmap <S-Insert>		<C-R>+

imap <S-Insert>		<C-V>
vmap <S-Insert>		<C-V>

" Use CTRL-Q to do what CTRL-V used to do
noremap <C-P>		<C-V>



" Eigene Shortcuts/Snippets

noremap <C-s> :w
inoremap <C-s> <esc> <C-s>
"c++ Block einfügen (entspricht Eingabe Ctrl-+ auf deutscher Tastatur
nnoremap <C-]> o{<cr><cr>}<esc>ki

nnoremap zh [z
nnoremap zl ]z
